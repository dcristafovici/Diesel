@media screen and (max-width: 1440px)
  .contract-item__title
    h3
      font-size 25px
  .reviews-slide__item
    width: calc(100% - 100px)
  
  .slick-next
    right -10px
  .slick-prev
    left -10px

@media screen and (max-width: 1200px)
  .content
    width 950px
  .logo
    width 170px
  .header
    .logo
      margin-right 20px
    &-tagline
      span
        font-size 16px
    &-phone
      a
        font-size 16px
    &-worktime
      span
        font-size 16px
  .header-cnt:first-child
    margin-right 50px

  .home
    background-position 56% 

  .home
    &-title
      h1
        br
          display none
        span
          &:last-child
            display block
    &-adv
      &__text
        padding-right 8px
        span
          font-size 16px
          br
            display none


  .contract-item__title h3
    white-space: normal
  .reviews-slide__photo
    width 150px
    height 150px
  .reviews-slide__text
    width calc(100% - 165px)
  .quiz-form
    width 60%
  .footer span, .footer a
    font-size 20px
    line-height 40px