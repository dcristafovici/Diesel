body
  min-width: 320px
  overflow-x hidden
  font-family $Light
  color $gr


h1,
h2
  font-size 40px
  line-height 55px
  color $bk
  font-family $Light
  span
    font-family $Bold

h3
  font-size 30px
  line-height 36px
  color $bk
  font-family $Bold
  letter-spacing: 0.01em


p
  font-size 20px
  line-height 26px
  font-family $Light
  color $gr

a
  text-decoration none


.content
  width 1170px
  margin 0 auto
  &.content-relative
    position relative
    z-index 3

img
  max-width: 100%

section
  padding-top 90px
  padding-bottom 90px
.title
  text-align center
  margin-bottom 90px

.text-blue
  color $bl