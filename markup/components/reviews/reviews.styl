.reviews
  background url("../img/assets/save/sv.jpg") no-repeat center/cover
  &-tagline
    text-align center
    margin-bottom 5px
    h3
      color $bl
  
  &-slider
    position relative
  .slick-list
    padding-top 30px
    padding-bottom 30px
  &-slide
    outline: none
    &.slick-active
      .reviews-slide__item
        transition: all 0.5s ease-in-out
        box-shadow:  0px 5px 30px 0px rgba(20, 20, 20, 0.25);
    &__item
      background $wh
      border-radius: 5px
      box-shadow: none
      display flex
      justify-content space-between
      width calc(100% - 60px)
      margin 0 auto
      padding 40px 35px
      box-sizing: border-box
    &__photo
      width 225px
      height 225px
      border-radius: 50%
      margin-right 40px
      box-shadow: 0px 5px 30px 0px rgba(20, 20, 20, 0.25);
      overflow hidden
      img
        width 100%
        height 100%
        object-fit: cover
    &__text
      width calc(100% - 265px)
      h3
        margin-bottom 20px
      span
        display block
        font-size 20px
        line-height 26px
        font-family $Light
        color $gr
        letter-spacing: 0.01em
      p
        letter-spacing: 0.01em
        margin-top 28px
        margin-bottom 25px
      a
        display inline-block
        font-size 20px
        text-decoration underline
        color #015f90


.slick-next,
.slick-prev
  background none
  border none
  outline: none
  position absolute
  top 50%
  transform: translateY(-50%)
  font-size: 0
  width 55px
  height 55px
  cursor pointer
.slick-prev
  background url('../img/assets/reviews/prev.svg') no-repeat center/contain
  left -50px
.slick-next
  right -50px
  background url('../img/assets/reviews/next.svg') no-repeat center/contain
