.virew
  padding-bottom 50px
  &-items
    display flex
    flex-wrap: wrap
  &-item
    width 32.20338983050847%
    margin-bottom 40px
    margin-right 1.69491525423729%
    &:nth-child(3n)
      margin-right 0
  &-video
    width 100%
    height 250px
    display flex
    overflow hidden
    justify-content center
    align-items center
    position relative
    margin-bottom 20px
    border-radius: 5px
    box-shadow:  0px 5px 30px 0px rgba(20, 20, 20, 0.25);
    &:hover
      &::after
        transition: background 0.5s ease-in-out
        width 100%
        height 100%
        background url('../img/assets/virew/hover.png') no-repeat center
    &::before
      content ''
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      background #202020
      opacity 0.7
    &::after
      content ''
      position absolute
      left 50%
      top 50%

      width 40px
      height 40px
      transform: translate(-50%,-50%)
      background url('../img/assets/virew/bg.png') no-repeat center/contain
    img
      width 100%
      height 100%
      object-fit: cover
  &-title
    margin-bottom 7px
  &-city
    color $gr
    font-family $Light
    font-size 20px