.save
  background url('../img/assets/save/sv.jpg') no-repeat center/cover
  padding-bottom 60px

  &-items
    display flex
    flex-wrap: wrap
  &-item
    width 32.20338983050847%
    margin-right 1.69491525423729%
    margin-bottom 30px
    &:nth-child(3n)
      margin-right 0
    &__photo
      width 300px
      height 200px
      box-shadow: 0px 5px 30px 0px rgba(20, 20, 20, 0.25);
      border-radius: 5px
      overflow hidden
      margin 0 auto
      margin-bottom 30px

      img
        width 100%
        height 100%
        object-fit: cover

    &__title
      text-align center
      margin-bottom 20px
    &__text
      text-align center