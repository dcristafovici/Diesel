.quiz
  background url('../img/assets/quiz/quiz.jpg') no-repeat center/cover
  .title
    h2
      color $wh





.quiz
  &-wrapper
    padding 40px
    box-sizing: border-box
    border-radius: 5px
    background $wh
    box-shadow: 0px 5px 40px 0px rgba(20, 20, 20, 0.3);
  &-title
    margin-bottom 35px
    h3
      font-size 30px
      font-family $Light
  &-line
    &__wrapper
      position relative
      width 100%
      margin-bottom 30px
      height 50px
      background #e6e6e6
      box-shadow: 0px 1px 4px 1px rgba(0, 0, 0, 0.2) inset;
      border-radius: 25px
    &__inner
      height 50px
      border-radius: 25px
      width 25%
      display flex
      transition: all 0.5s ease-in-out
      justify-content center
      align-items center
      background $bl
      box-shadow: 0px 1px 8px 0px rgba(0, 0, 0, 0.2) inset;
      position relative
      overflow hidden
      h6
        position relative
        z-index 3
      &::before
        content ''
        position absolute
        left 0
        top 0
        width 100%
        height 100%
        background: $bl linear-gradient(to bottom, rgba(255,255,255,1) 0%,rgba(125,185,232,0) 100%);
        opacity 0.31
      &::after
        content ''
        position absolute
        left 0
        top 0
        width 100%
        height 100%
        background url('../img/assets/quiz/step.svg') repeat-x 
  &-steps
    display flex
    align-items center
    margin-bottom 30px
    span
      display block
      margin-right 10px
      color $gr
      font-size 20px
      font-family $Light
    ul
      display flex
      align-items center
      li
        padding-right 18px
        position relative
        &::after
          content ''
          position absolute
          left 0
          height 1px
          width 100%
          top 50%
          margin-top -0.5px
          background #5c5c5c
        &:last-child
          padding-right 0
          &::after
            content none
        &:first-child
          span
            background #5c5c5c
        span
          display block
          width 13px
          height 13px
          border: 1px solid #5c5c5c
          border-radius: 50%
          transition: all 0.5s ease-in-out
          background $wh
          position relative
          z-index 2


.quiz
  &-line
    &__inner
      h6
        display flex
        align-items center
      span
        margin-left 5px
        display none
        &.active
          display block
.quiz
  &-controller
    display flex
    align-items center
    justify-content flex-end
    width 30%
    .quiz-next
      margin-left 20px
  &-bottom
    display flex
    align-items: flex-end
    justify-content space-between
  &-form
    width 68.46846846846847%


.quiz
  &-form
    &__wrapper
      position relative
  &-item
    opacity 0
    z-index -1
    visibility: hidden
    position absolute
    left 0
    top 0
    transform: translateY(-20px)
    &.active
      transform: translateY(0)
      z-index 3
      position relative
      visibility visible
      opacity 1
      transition: all .5s ease-in-out


// Quiz Item
.quiz-item
  
  &__title
    margin-bottom 30px

  &:last-child
    .form-group
      margin-bottom 20px
      &:last-child
        margin-bottom 0px
#quiz.quiz-process-1
  .quiz-back
    display none
    
#quiz.quiz-process-2
  .quiz-steps ul li:nth-child(2) span
    background #5c5c5c
  .quiz-line__inner
    width 50%


#quiz.quiz-process-3
  .quiz-steps ul li:nth-child(2) span,
  .quiz-steps ul li:nth-child(3) span
    background #5c5c5c
  .quiz-line__inner
    width 75%
   

#quiz.quiz-process-4
  .quiz-steps ul li:nth-child(2) span,
  .quiz-steps ul li:nth-child(3) span,
  .quiz-steps ul li:nth-child(4) span
    background #5c5c5c
  .quiz-line__inner
    width 100%
    background #358312

