#disel-bg
  position fixed
  left 0
  top 0
  width 100%
  height 100%
  z-index 10
  background rgba(0,0,0,0.5)

.popup
  position relative
  width 400px
  border-radius: 5px
  box-sizing: border-box
  z-index 11
  background $wh
  padding-top 45px
  padding-bottom 40px
  padding-left 40px
  padding-right 40px
  &-title
    color #191919
    text-align center
    margin-bottom 23px
    line-height normal
    font-size 23px
    font-family $Light
    span
      font-family $Bold
  input   
    width 100%
  
  .form-group
    margin-bottom 25px
    label
      margin-bottom 5px
      font-family $Bold
      color #191919
    input + label
      color #808080
      font-family $Light
      text-decoration underline
  button.button
    width 100%
    padding 0
    justify-content center

#popup-model.popup
  .popup
    &-title
      width: calc(100% + 10px)
      font-family $Bold
  .button
    span
      font-size 13px
  
#popup-correct
  .popup-title
    font-size 20px
    margin-bottom 10px