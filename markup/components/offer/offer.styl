.offer
  background url('../img/assets/offer/right.png') no-repeat right 20%/auto, url('../img/assets/offer/left.png') no-repeat left 35%/auto
  position relative
  &-items
    width calc(100% - 70px)
    margin 0 auto
    display flex
    flex-wrap: wrap
    margin-bottom 35px
    justify-content space-between
  &-item
    width 50%
    padding-left 35px
    padding-right 35px
    margin-bottom 30px
    box-sizing: border-box
    &__photo
      width 400px
      height 260px
      box-shadow: 0px 5px 30px 0px rgba(0, 0, 0, 0.25);
      border-radius: 5px
      overflow hidden
      margin 0 auto
      margin-bottom 50px
      img 
        width 100%
        height 100%
        object-fit: cover
    &__title
      text-align center
      margin-bottom 20px
    &__text
      text-align center
      margin-bottom 20px
    &__price
      text-align center
      span
        color $rd
        font-family $Bold
        font-size 25px

.offer
  &-element
    position absolute
    bottom -140px
    left 50%
    transform: translateX(-50%)
    z-index 0

.video  
  &-title
    text-align center
    margin-bottom 25px
    h3
      margin-bottom 7px
    span
      color $gr
      font-family $Italic
  &-wrapper
    width 790px
    margin 0 auto
    height 500px
    a
      display flex
      justify-content center
      width 100%
      height 100%
      align-items center
      border-radius: 5px
      overflow hidden
      box-shadow: 0px 10px 30px 0px rgba(20, 20, 20, 0.4);
      position relative
      &::before
        content ''
        position absolute
        left 0
        top 0
        width 100%
        height 100%
        background #191919
        opacity 0.75
      &::after
        content ''
        position absolute
        left 50%
        top 50%
        transform: translate(-50%,-50%)
        width 382px
        height 382px
        background url('../img/assets/offer/play.png') no-repeat center/contain
      img
        width 100%
        height 100%
        object-fit: cover