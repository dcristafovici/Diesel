.sertificates
  background url('../img/assets/sertificates/bgb.jpg') no-repeat center/cover
  padding-bottom 130px
  .title
    margin-bottom 50px
  .subtitle
    margin-bottom 40px
    text-align center
    h3
      color $bl
  
  &-items
    display flex
    flex-wrap: wrap
  &-item
    width 32.20338983050847%
    margin-right 1.69491525423729%
    margin-bottom 0
    display flex
    justify-content center
    align-items center
    margin-bottom 20px
    box-shadow: 0px 5px 15px 0px rgba(15, 15, 15, 0.35);

    img
      width 100% 
      object-fit: contain
    &:nth-child(3n)
      margin-right: 0