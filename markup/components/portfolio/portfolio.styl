.portfolio
  &-items
    display flex
    flex-wrap: wrap
  &-item
    width 32.20338983050847%
    margin-right 1.69491525423729%
    height 250px
    display flex
    justify-content center
    align-items center
    margin-bottom 30px
    position relative
    border-radius: 5px
    overflow hidden
    box-shadow: 0px 5px 20px 0px rgba(20, 20, 20, 0.25);
    &:hover
      &::before
        opacity .65
      &::after
        opacity 1
        transform: translateY(0)
      .portfolio-item__name
        opacity 1
        transform: translateY(0)
    &::before
      content ''
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      background #0c0c0c
      opacity 0.65
      z-index 2
      transition: all 0.5s ease-in-out
      opacity 0
    &::after
      content ''
      position absolute
      left 50%
      top 50%
      background url('../img/assets/portfolio/search.svg') no-repeat center/contain
      width 40px
      height 40px
      opacity 0
      transition: all 0.5s ease-in-out
      z-index 3
      transform: translateY(-20px)
      margin-left -20px
      margin-top -20px
    &__photo
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      img
        width 100%  
        height 100%
        object-fit: cover
    &:nth-child(3n)
      margin-right 0
    &__name
      position absolute
      z-index 4
      left 20px
      bottom 23px
      color $wh
      font-size 20px
      font-family $Bold
      opacity 0
      transform: translateY(60px)
      transition: all 0.5s ease-in-out
      span
        font-family $Reg

.portfolio
  &-more
    display flex
    justify-content center
    align-items center
    span
      color #038a92
      font-size 20px
      font-family $Light
      text-decoration underline
      cursor pointer
    