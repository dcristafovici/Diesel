.header
  position absolute
  left 0
  top 0
  width 100%
  top 40px
  z-index 10
  &-wrapper
    display flex
    justify-content space-between
  &-left
    width 55%
    display flex
    align-items center
    .logo
      margin-right 30px
  
  &-right
    width 40.67796610169492%
  &-tagline
    span
      font-size 20px
      line-height 28px
      color $gr
      font-family $Reg
      letter-spacing: 0.01em

  &-contacts
    display flex
    align-items center
    justify-content flex-end
  &-cnt
    &:first-child
      margin-right 90px
      .header-phone
        a
          position relative
          right -20px
    &:last-child
      .header-phone
        a
          color $wh
  &-phone
    a
      color $bk
      font-size 20px
      line-height 28px
      font-family $Bold
  &-worktime
    span
      color $gr
      font-size 20px
      line-height 28px
      font-family $Light
      display block
      position relative
      padding-left 20px
      &::before
        content ''
        position absolute
        left 0
        top 50%
        width 10px
        height 10px
        border-radius: 50%
        background #279e1e
        margin-top -5px
    
  &-mail
    a
      color $wh
      font-size 20px
      line-height 28px
      font-family $Light
      display block





.logo
  width 184px
  img
    width 100%