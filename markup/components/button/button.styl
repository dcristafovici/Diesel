.button
  height 80px
  display inline-flex
  align-items center
  padding-left 50px
  padding-right 50px
  box-sizing: border-box
  border: 1px solid #b80000
  box-sizing: border-box
  background #d10707
  overflow hidden
  border-radius: 5px
  position relative
  box-shadow: 0px -5px 0px 0px rgba(0, 0, 0, 0.3) inset,  0px 5px 30px 0px rgba(211, 18, 18, 0.4);
  transition: all 0.5s ease-in-out

  &::before
    content ''
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    opacity 0.28
    background: linear-gradient(to bottom, rgba(255,255,255,1) 0%,rgba(255,255,255,0) 100%);
  span
    position relative
    z-index 3
    font-size 16px
    color $wh
    font-family $Semi
    text-transform uppercase