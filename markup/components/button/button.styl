.button
  height 80px
  display inline-flex
  align-items center
  padding-left 50px
  padding-right 50px
  box-sizing: border-box
  border: 1px solid #b80000
  box-sizing: border-box
  background #d10707
  overflow hidden
  border-radius: 5px
  position relative
  box-shadow: 0px -5px 0px 0px rgba(0, 0, 0, 0.3) inset,  0px 5px 30px 0px rgba(211, 18, 18, 0.4);
  transition: all 0.5s ease-in-out

  &::before
    content ''
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    opacity 0.28
    background: linear-gradient(to bottom, rgba(255,255,255,1) 0%,rgba(255,255,255,0) 100%);
  span
    position relative
    z-index 3
    font-size 16px
    color $wh
    font-family $Semi
    text-transform uppercase


.button.button-pdf
  padding-left 33px
  padding-right 80px
  &::after
    content ''
    position absolute
    width 30px
    height 34px
    background url('../img/assets/price/pdf.svg') no-repeat center/contain
    right 30px
    top 12px
  span
    display block
    text-align center
    &:last-child
      color #e59d9d
      font-size 12px
      line-height 30px
      letter-spacing: 0.025em

.button
  &.quiz-button
    cursor pointer
    padding-left 40px
    padding-right 65px
    &::after
      content ''
      position absolute
      width 20px
      height 20px
      top 50%
      margin-top -10px
      right 30px
      background url('../img/assets/quiz/right.svg') no-repeat center/contain

    &.quiz-button__prev
      padding-right 45px
      padding-left 60px
      background none
      border: 1px solid #5c5c5c
      box-shadow: none
      span
        color #5c5c5c
      &::after
        content ''
        right auto
        left 30px
        background url('../img/assets/quiz/left.svg') no-repeat center/contain
      &::before
        content none
      