.home
  background url('../img/assets/home/bg.jpg') no-repeat center/cover
  height 950px
  box-sizing: border-box
  padding-top 170px
  padding-bottom 0
  overflow hidden
  &-wrapper
    display flex
    justify-content space-between
  &-title
    padding-bottom 100px
  &-left
    width 60.16949152542373%
  &-right
    width calc(39.83050847457627% - 30px)
    
  &-image
    width 130%

  &-advantages
    display flex
    padding-bottom 100px

  &-adv
    &__item
      width: 28.16901408450704%
      &__icon
        img
          height 100%
          object-fit: contain
    &__text
      position relative
      top -5px
      span
        font-size 20px
        color $gr
        line-height:  27px
        font-family $Reg


.home.home-black
  background url('../img/assets/home-black/bg.jpg') no-repeat center/cover
  padding-top 230px
.home.home-black
  .home-title
    h1
      font-family $Bold
      span  
        color #de4f46
  .home-right
    position relative
  .home-form
    position absolute
    right 0
    top -70px
    button.button
      span  
        font-size 13px