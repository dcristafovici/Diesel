.contacts
  position relative
  padding 0
  height 500px
  #map
    position absolute
    left 0
    z-index 1
    top 0
    width 100%
    height 100%
  .content
    height 100%
    position relative
  &-pop
    position absolute
    right 0
    top 50%
    padding-left 40px
    padding-right 30px
    padding-top 45px
    background $wh
    padding-bottom 45px
    box-shadow: 0px 5px 30px 0px rgba(20, 20, 20, 0.25);
    transform: translateY(-50%)
    width 390px
    box-sizing: border-box
    z-index 4
    border-radius: 5px
    span
      font-family $Bold
      color $bk
      font-size 30px