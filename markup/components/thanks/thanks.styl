.thanks
  padding-bottom 50px
  background url('../img/assets/thanks/bg.jpg') no-repeat center/cover
  &-icon
    width 150px
    margin 0 auto
    padding-top 85px
    margin-bottom 40px
    img
      width 100%

  &-title
    text-align center
    margin-bottom 30px
    h1
      font-size 60px
      font-family $Bold
      color $bk

  &-number
    display flex
    justify-content center
    margin-bottom 25px
    align-items center
    span
      font-size 30px
      font-family $Light
      color $bk
      display block
      &:last-child
        color #de4f46
        margin-left 10px
        font-family $Bold
  &-edit
    text-align center
    margin-bottom 40px
    span
      color #6d6d6d
      font-size 20px
      line-height 26px
      font-family $Light
    a
      color #1182a2
      font-size 20px
      line-height 26px
      font-family $Light
      text-decoration underline
  &-home
    display flex
    justify-content center
    align-items center
    a
      font-size 30px
      font-family $Light
      color #1182a2
      text-decoration underline