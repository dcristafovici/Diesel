.any
  padding-top 160px
  padding-bottom 0
  overflow hidden
  background url('../img/assets/home/bg.jpg') no-repeat center/cover
  &-wrapper
    position relative
    padding-bottom 65px
  &-image
    position absolute
    left 55%
    bottom -1px
    width 100%
  &-left
    width 55%
  .title
    text-align left
    margin-bottom 30px
    h2
      font-family $Bold
  .subtitle
    margin-bottom 80px
    h4
      color $gr
      font-family $Reg
      line-height 35px
  .tagline
    margin-bottom 30px
    span
      line-height 26px
      color $bl
      font-family $Reg
      font-size 20px
  &-phones
    margin-bottom 70px
    a
      display block
      font-size 40px
      font-family $Bold
      color $bl
      margin-bottom 25px
      &:last-child
        margin-bottom 0
      span
        color $bk
  &-button
    margin-bottom 45px
  &-bottom
    display flex
    justify-content space-between
  &-write
    display flex
    align-items center
    &__icon
      margin-right 10px
    &__span
      span
        color #14930b
        font-size 20px
        line-height 30px
        text-decoration underline
  &-specialist
    span
      color #0e0e0e
      display block
      font-size 25px
      line-height 35px
      font-family $Bold
      &:last-child
        margin-bottom 0
        color $gr
        font-size 16px